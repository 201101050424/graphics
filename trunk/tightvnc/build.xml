<?xml version="1.0" encoding="UTF-8"?>
<project name="TightVNC" default="default">
    <property name="src.dir" value="src" />
    <property name="out.dir" value="out" />
    <property name="bin.dir" value="bin" />

    <description>
    	TightVNC
    </description>

    <target name="default" depends="tightvnc" />
    
    <target name="clean">
        <delete dir="${out.dir}" />
        <delete dir="${bin.dir}" />
    </target>

    <target name="tightvnc"
            depends="tightvnc.jar" />

    <target name="tightvnc.compile">
        <mkdir dir="${bin.dir}" />
        
        <javac srcdir="${src.dir}"
               destdir="${bin.dir}"
               includes="com/tightvnc/" />
    </target>
    
    <target name="tightvnc.jar" depends="tightvnc.compile">
        <mkdir dir="${out.dir}" />

        <jar destfile="${out.dir}/tightvnc.jar" 
                basedir="${bin.dir}" 
                includes="com/tightvnc/">
        </jar>
    </target>
</project>
